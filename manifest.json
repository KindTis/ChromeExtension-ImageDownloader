{
    "manifest_version": 3,
    "name": "Image Downloader",
    "version": "0.2",
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "downloads",
      "tabs",
      "scripting",
       "activeTab"
    ],
    "host_permissions": [
      "*://*/*"
    ],
    "action": {
      "default_icon": {
        "16": "icon/icon_16.png",
        "32": "icon/icon_32.png",
        "64": "icon/icon_64.png",
        "128": "icon/icon_128.png"
      },
      "default_title": "Download Images"
    }
  }